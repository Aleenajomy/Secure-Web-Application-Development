# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000
CLIENT_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/secure-auth

# Security Keys (IMPORTANT: Generate strong, unique keys for production!)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
SESSION_SECRET=your-super-secure-session-secret-change-this-in-production

# Email Configuration (for future email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Session Configuration
SESSION_MAX_AGE=86400000

# reCAPTCHA Configuration
RECAPTCHA_SITE_KEY=6Ld96pUrAAAAADOcQkcjkWo0Or8iB3YyWqlYnvaH
RECAPTCHA_SECRET_KEY=6Ld96pUrAAAAALuX6Aiaa2Wd7YdgO6SERG-k37wr

# Security Headers
ENABLE_HTTPS_REDIRECT=false
ENABLE_HSTS=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Production Settings (set these in production)
# NODE_ENV=production
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/secure-auth
# CLIENT_URL=https://yourdomain.com
# ENABLE_HTTPS_REDIRECT=true